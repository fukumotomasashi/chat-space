.side-bar
  .header-side
    %h5=current_user.name
    .header-side__actions
      = link_to new_group_path, class: "btn-action" do
        =fa_icon "pencil-square-o "
      = link_to edit_user_path(current_user), class: "btn-action" do
        =fa_icon "cog "
  - current_user.groups.each do |group|
    %ul.side-groups
      %li.side-group
        = link_to group_massages_path(group), class: "side-group__link" do
          %p.side-group__name
            = group.name
          %p.side-group__message
            = group.show_last_message
